<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_maps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slideView"
        android:orientation="vertical"
        android:layout_marginTop="170dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide it down"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/darker_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#d0d0d0"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/llImage"
            android:orientation="horizontal">

           <ImageView
               android:layout_width="80dp"
               android:layout_marginLeft="10dp"
               android:layout_height="60dp"
               android:src="@drawable/ic_pictures"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="IMAGES"
                android:id="@+id/textImages"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:textColor="#181818" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/llVideo"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_videos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VIDEOS"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:id="@+id/textVideos"
                android:textColor="#181818"
               />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llAudio"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_music_player"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AUDIOS"
                android:id="@+id/textAudios"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:textColor="#181818"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d0d0d0" />

    </LinearLayout>
</RelativeLayout>